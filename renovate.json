{
  "extends": [
    "config:js-lib"
  ],
  "timezone": "Europe/Helsinki",
  "prHourlyLimit": 5,
  "labels": ["patch"],
  "packageRules": [
    {
      "groupName": "Smartly Oats",
      "packagePatterns": [
        "^@smartlyio\/oats"
      ],
      "schedule": "at any time"
    },
    {
      "groupName": "ESLint",
      "packagePatterns": [
        "eslint"
      ],
      "schedule": "at any time"
    },
    {
      "groupName": "@types",
      "packagePatterns": [
        "^@types\/"
      ],
      "schedule": "at any time"
    },
    {
      "depTypeList": ["devDependencies"],
      "labels": ["no-release"]
    }
  ]
}
